{
	"extends": [
		"stylelint-config-twbs-bootstrap"
	],
	"rules": {
		"declaration-property-value-disallowed-list": {
			"border": "none",
			"outline": "none"
		},
		"function-disallowed-list": [
			"calc",
			"lighten",
			"darken"
		],
		"property-disallowed-list": [],
		"scss/dollar-variable-default": [
			true,
			{
				"ignore": "local"
			}
		],
		"scss/selector-no-union-class-name": true
	}
}
