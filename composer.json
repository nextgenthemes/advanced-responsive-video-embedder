{
	"name": "nextgenthemes/advanced-responsive-video-embedder",
	"description": "ARVE Advanced Responsive Video Embedder",
	"type": "wordpress-plugin",
	"license": "GPL-3.0",
	"authors": [
		{
			"name": "Nicolas Jonas",
			"homepage": "https://nextgenthemes.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"extra": {
		"easy-digital-downloads/edd-sl-sdk": "1.0.0"
	},
	"require-dev": {
		"nextgenthemes/wp-settings": "@dev",
		"automattic/jetpack-autoloader": "^v5.0.2"
	},
	"config": {
		"allow-plugins": {
			"automattic/jetpack-autoloader": true
		},
		"optimize-autoloader": true,
		"platform": {
			"php": "7.4"
		}
	},
	"repositories": {
		"nextgenthemes/wp-settings": {
			"type": "path",
			"url": "../../../../../../dev/composer-packages/wp-settings",
			"options": {
				"symlink": false
			}
		},
		"edd-sl-sdk": {
			"type": "vcs",
			"url": "git@github.com:awesomemotive/edd-sl-sdk.git"
		}
	},
	"scripts": {
		"build": [
			"./bin/block-json",
			"./bin/build-readme",
			"@build:common",
			"@build:arve",
			"@composer update",
			"@composer update --working-dir=tests"
		],
		"start": "bash -c 'composer run start:arve & composer run start:common'",
		"start:arve": "npx --no-install wp-scripts start src/main src/block src/admin src/shortcode-ui",
		"build:arve": "npx --no-install wp-scripts build src/main src/block src/admin src/shortcode-ui",
		"start:common": "npx --no-install wp-scripts start --experimental-modules --source-path=vendor/nextgenthemes/wp-settings/src --output-path=vendor/nextgenthemes/wp-settings/build",
		"build:common": "npx --no-install wp-scripts build --experimental-modules --source-path=vendor/nextgenthemes/wp-settings/src --output-path=vendor/nextgenthemes/wp-settings/build",
		"pre-update-cmd": "./bin/sync-wp-settings",
		"test": "phpunit",
		"test-arve": "NGT_PHPUNIT_LOAD_PLUGINS=advanced-responsive-video-embedder phpunit --testsuite advanced-responsive-video-embedder"
	}
}
