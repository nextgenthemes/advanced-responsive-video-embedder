{
	"compileOnSave": false,
	"compilerOptions": {
		"noImplicitAny": false,
		"removeComments": true,
		"allowUnreachableCode": false,
		"strictNullChecks": true,
		"sourceMap": true,
		"allowJs": true,
		"esModuleInterop": true,
		"lib": [
			"es2020",
			"dom",
			"dom.iterable"
		]
	},
	"includes": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.spec.ts"
	]
}
